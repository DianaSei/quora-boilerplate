
<h1 class="text-center font-weight-light">Quora Clone</h1>
<p class="text-center font-weight-light"><%= "Welcome to Quora Clone!" %> <br/>
<%= "Today is #{@date}" %></p> <br style="line-height: 50px" />

<h2 class= "text-center h3 mb-3 font-weight-light">Login</h2>

<form method='post' action='/login' class="container col-md-6">
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="email">
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

